---
interface LaunchData{
    launchImage: string;
    launchName: string;
    launchId: string;
    launchIsSuccess: boolean;
    launchDetails: string;
}

const {launchImage, launchName, launchId, launchDetails, launchIsSuccess} = Astro.props;
const status = launchIsSuccess ? "Success" : "Failure";
---

<a href={`/launch/${launchId}`} class="w-full px-4 py-4 my-4 flex flex-col gap-4 rounded-lg border shadow-md bg-gray-800 border-gray-700 hover:scale-105 hover:bg-gray-700 hover:border-gray-500 transition">
    <picture class="flex justify-center items-center p-4">
        <img class="rounded-lg" src={launchImage} alt={`Imagen del lanzamiento ${launchName}`} />
    </picture>
    <header class="flex items-center gap-2">
        <h2 class="text-lg font-extrabold">Launch {launchName}</h2>
    <span
    class:list={[
        "text-xs font-semibold mr-2 px-2.5 py-0.5 rounded",
        {
            "bg-green-400 text-green-900": launchIsSuccess,
            "bg-red-400 text-red-900": !launchIsSuccess
        }
    ]} 
    >{status}</span>
    </header>
    <p class="text-gray-500">{launchDetails}</p>
</a>